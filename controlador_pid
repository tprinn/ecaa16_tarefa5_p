  msg = Twist()
  msg.angular.z = control
  pub.publish(msg)
#-----------------------------------------------------------------------------------

#PUBLISHER E SUBSCRIBER-------------------------------------------------------------
pub = rospy.Publisher('/cmd_vel', Twist, queue_size=1)
odom_sub = rospy.Subscriber('/odom', Odometry, odomCallBack)
scan_sub = rospy.Subscriber('/scan', LaserScan, scanCallBack)


rospy.spin()
